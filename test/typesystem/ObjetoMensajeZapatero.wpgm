/**
 * Introduccion a Objetos
 *
 * Mensajes entre objetos. 
 */

object fiona {
	
	@Expect(type="Boolean")
	var felicidad = false
	
	method compraZapatos() {
		felicidad = true	
	}
	
	method estaFeliz() {
		return felicidad
	}
}
 
object pepe {
	method cuantosGolesMetiste(){
		return 5
	}
	
   @Expect(type="() => Void")
	method labura(){
		fiona.compraZapatos()
	}
	
	@Expect(type="() => Boolean")
	method hicisteBienTuTrabajo() {
		return fiona.estaFeliz()
	}
}


program p {
	 
	@Expect(type="fiona")
	const alguien = fiona

	@Expect(type="Number")
	const goles = pepe.cuantosGolesMetiste()
	
}

